{
  "name": "diccionario-dev-helper",
  "displayName": "Diccionario Dev Helper",
  "description": "Traducir código o explicar conceptos seleccionados en VSCode usando la API de Diccionario Dev.",
  "version": "0.1.4",
  "publisher": "omar-hernandez-rey",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "scripts": {
    "package": "vsce package -o diccionario-dev-helper.vsix --allow-missing-repository"
  },
  "contributes": {
    "commands": [
      {
        "command": "diccionarioDev.translateSelection",
        "title": "Diccionario Dev: Traducir o explicar selección",
        "category": "Diccionario Dev"
      }
    ],
    "keybindings": [
      {
        "command": "diccionarioDev.translateSelection",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Diccionario Dev Helper",
      "properties": {
        "diccionarioDev.baseUrl": {
          "type": "string",
          "default": "http://localhost:3000",
          "description": "URL base de la instancia de Diccionario Dev (ej. http://localhost:3000 o tu dominio público)."
        },
        "diccionarioDev.defaultContext": {
          "type": "string",
          "enum": [
            "dictionary",
            "interview",
            "bug",
            "translate"
          ],
          "default": "dictionary",
          "description": "Contexto preferido para consultas semánticas."
        }
      }
    }
  },
  "devDependencies": {
    "@vscode/vsce": "^3.7.0"
  }
}
