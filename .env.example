# Base de datos (SQLite por defecto)
DATABASE_URL="file:./prisma/dev.db"

# JWT
# Genera un secreto aleatorio de >=32 bytes. Ejemplo: `openssl rand -base64 48`
JWT_SECRET="GENERAR_CON_OPENSSL_RAND_BASE64_48"
JWT_EXPIRES_IN="1d"

# Bootstrap de administrador para el seed
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="DEFINE_AQUI_UNA_CONTRASEÑA_ADMIN_SUPER_FUERTE"
ADMIN_EMAIL="admin@example.com"

# Solo para desarrollo: permite registro sin sesión admin usando un token
# ¡No usar en producción! Si lo expones al cliente, usa la variante NEXT_PUBLIC_ y
# entiende el riesgo (cualquiera con el token podrá crear usuarios.)
# ADMIN_TOKEN="token-solo-dev"
# NEXT_PUBLIC_ADMIN_TOKEN="token-solo-dev"
