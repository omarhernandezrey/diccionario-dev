# Base de datos (PostgreSQL)
# Formato: postgresql://USER:PASSWORD@HOST:PORT/DB
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/diccionario"

# JWT
# Genera un secreto aleatorio de >=32 bytes. Ejemplo: `openssl rand -base64 48`
JWT_SECRET="GENERAR_CON_OPENSSL_RAND_BASE64_48"
JWT_EXPIRES_IN="1d"

# Recovery de contraseña
# URL base para enlaces de recuperación de contraseña
APP_URL="http://localhost:3000"
# Solo dev: expone el token en la respuesta (para probar sin email)
AUTH_RECOVERY_EXPOSE_TOKEN="true"

# Email (Resend) - Para envío de correos de recuperación
# Obtén tu API Key en https://resend.com
RESEND_API_KEY="re_xxxxxxxxxxxx"
# Dirección de envío (usa onboarding@resend.dev para pruebas, o configura tu dominio)
EMAIL_FROM="onboarding@resend.dev"

# Bootstrap de administrador para el seed
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="DEFINE_AQUI_UNA_CONTRASEÑA_ADMIN_SUPER_FUERTE"
ADMIN_EMAIL="admin@example.com"
GOOGLE_CLIENT_ID="TU_CLIENT_ID_DE_GOOGLE"
NEXT_PUBLIC_GOOGLE_CLIENT_ID="TU_CLIENT_ID_DE_GOOGLE"

# Solo para desarrollo: permite registro sin sesión admin usando un token
# ¡No usar en producción! Si lo expones al cliente, usa la variante NEXT_PUBLIC_ y
# entiende el riesgo (cualquiera con el token podrá crear usuarios.)
# ADMIN_TOKEN="token-solo-dev"
# NEXT_PUBLIC_ADMIN_TOKEN="token-solo-dev"
# DISABLE_SEARCH_LOGS="true"           # opcional, evita escribir SearchLog en entornos de solo lectura
# FORCE_DICTIONARY_SEED="true"         # opcional, fuerza el seed automático de términos

# Quizzes (opcional)
# ENABLE_QUIZ_AUTOSEED="true"
# QUIZ_AUTOSEED_INCLUDE_TERMS="true"

# Rate limit opcional (Redis). Si no se define, se usa la memoria local.
# REDIS_URL="redis://localhost:6379"
